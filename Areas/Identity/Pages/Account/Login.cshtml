@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">

    <div class="col-md-6 col-lg-5">

        <div class="text-center mb-4">
            <h1 class="fw-bold" style="color: var(--navy-blue);">@ViewData["Title"]</h1>
            <p class="text-muted fs-5">Use a local account to log in.</p>
        </div>

        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder="Username" style="border-radius: 12px;" />
                    <label asp-for="Input.UserName" class="form-label">Username</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="border-radius: 12px;" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3 ms-2">
                    <label asp-for="Input.RememberMe" class="form-label text-muted">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary py-3 fw-bold shadow-sm" style="border-radius: 12px;">
                        Log in
                    </button>
                </div>

                <div class="text-center mt-4">
                    <p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-muted">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none" style="color: var(--navy-blue);">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-muted text-decoration-none small">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}