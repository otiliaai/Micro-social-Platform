@model IEnumerable<MicroSocialPlatform.Models.Group>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Groups";

    string darkBlueColor = "#5c6b8e"; 
}

<div class="feed-container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0" style="color: #2c3e50;">Explore Groups</h2>
            <p class="text-muted">Find communities that share your interests.</p>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn rounded-pill px-4 shadow-sm text-white"
               style="background-color: @darkBlueColor; border-color: @darkBlueColor;">
                <i class="bi bi-plus-lg me-2"></i> Create Group
            </a>
        }
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var group in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold" style="color: #2c3e50;">@group.Name</h5>
                                @if (group.CreatedAt > DateTime.UtcNow.AddDays(-2))
                                {
                                    <span class="badge rounded-pill" style="background-color: #d1fae5; color: #065f46;">New</span>
                                }
                            </div>

                            <p class="card-text text-muted small mb-3" style="min-height: 40px;">
                                @(group.Description.Length > 100 ? group.Description.Substring(0, 100) + "..." : group.Description)
                            </p>

                            <div class="d-flex align-items-center justify-content-between mt-auto">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center me-2 border"
                                         style="width: 30px; height: 30px; font-size: 12px; font-weight: bold; background-color: #f8f9fa; color: #6c757d;">
                                        @group.Moderator?.UserName.Substring(0, 1).ToUpper()
                                    </div>
                                    <small class="text-muted">Mod: @group.Moderator?.UserName</small>
                                </div>

                                <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-sm rounded-pill px-3"
                                   style="border: 1px solid @darkBlueColor; color: @darkBlueColor;"
                                   onmouseover="this.style.backgroundColor='@darkBlueColor'; this.style.color='white';"
                                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='@darkBlueColor';">
                                    View Group
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-people display-4 text-muted opacity-25"></i>
                </div>
                <h5 class="text-muted">No groups found at the moment.</h5>
                <p class="text-muted small">Be the first to create a community!</p>
                <a asp-action="Create" class="btn btn-sm mt-2 text-white" style="background-color: @darkBlueColor;">Create Group</a>
            </div>
        }
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>