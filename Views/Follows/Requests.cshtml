@model IEnumerable<MicroSocialPlatform.Models.Follow>

@{
    ViewData["Title"] = "Follow Requests";
}

<div class="insta-feed-container mt-4">
    <h4 class="fw-bold mb-4 px-2">Follow Requests</h4>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">

        @if (Model.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var item in Model)
                {
                    <div class="list-group-item p-3 d-flex align-items-center justify-content-between">

                        <div class="d-flex align-items-center">
                            <a asp-controller="Users" asp-action="Show" asp-route-id="@item.FollowerId" class="text-decoration-none">
                                @if (!string.IsNullOrEmpty(item.Follower.ProfileImage))
                                {
                                    <img src="@item.Follower.ProfileImage" class="rounded-circle border me-3 shadow-sm"
                                         style="width: 48px; height: 48px; object-fit: cover;" />
                                }
                                else
                                {
                                    var initial = "U";
                                    if (!string.IsNullOrEmpty(item.Follower.FirstName))
                                    {
                                        initial = item.Follower.FirstName.Substring(0, 1);
                                    }
                                    else if (!string.IsNullOrEmpty(item.Follower.UserName))
                                    {
                                        initial = item.Follower.UserName.Substring(0, 1);
                                    }

                                    <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm me-3"
                                         style="width: 48px; height: 48px; background-color: #7952b3; font-size: 1.2rem;">
                                        @initial.ToUpper()
                                    </div>
                                }
                            </a>

                            <div>
                                <a asp-controller="Users" asp-action="Show" asp-route-id="@item.FollowerId" class="text-decoration-none text-dark fw-bold">
                                    @item.Follower.UserName
                                </a>
                                <div class="text-muted small">
                                    @(item.Follower.FirstName) @(item.Follower.LastName)
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <form asp-action="Accept" method="post">
                                <input type="hidden" name="followerId" value="@item.FollowerId" />
                                <button type="submit" class="btn btn-primary btn-sm px-3 rounded-pill fw-bold"
                                        style="background-color: #7952b3; border: none;">
                                    Confirm
                                </button>
                            </form>

                            <form asp-action="Reject" method="post">
                                <input type="hidden" name="followerId" value="@item.FollowerId" />
                                <button type="submit" class="btn btn-light btn-sm border px-3 rounded-pill fw-bold">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <div class="mb-3">
                    <i class="bi bi-person-check fs-1 opacity-25"></i>
                </div>
                <h5 class="fw-bold">No pending requests</h5>
                <p class="small opacity-75">When people ask to follow you, you'll see them here.</p>
            </div>
        }
    </div>
</div>