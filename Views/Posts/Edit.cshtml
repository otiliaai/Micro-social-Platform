@model MicroSocialPlatform.Models.Post

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container mt-4 mb-4">
    <h2 class="fw-bold mb-3">Edit post</h2>

    <div class="row">
        <div class="col-md-7">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* Hidden fields for data integrity *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CreatedAt" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="control-label fw-semibold mb-1">Current media</label>
                    @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
                    {
                        <div class="border rounded p-2 mb-2 text-center">
                            @if (Model.MediaUrl.Contains(".mp4") || Model.MediaUrl.Contains(".mov"))
                            {
                                <video controls style="max-width: 100%; max-height: 260px;">
                                    <source src="@Model.MediaUrl" type="video/mp4" />
                                </video>
                            }
                            else
                            {
                                <img src="@Model.MediaUrl"
                                     alt="Current media"
                                     style="max-width: 100%; max-height: 260px; object-fit: contain;" />
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-2">No media attached to this post.</p>
                    }
                </div>

                <div class="form-group mb-3">
                    <label for="UploadedMedia" class="control-label">Change media (image/video)</label>
                    <input name="UploadedMedia" id="UploadedMedia" type="file" class="form-control" />
                    <small class="text-muted d-block mt-1">Leave empty to keep the current media.</small>
                    <span asp-validation-for="MediaUrl" class="text-danger"></span>
                </div>

                @* Keep MediaUrl so that, if no file is uploaded, it stays the same *@
                <input type="hidden" asp-for="MediaUrl" />

                <div class="form-group mt-3">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Back to details</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}